output "vnet_id" {
  description = "The ID of the virtual network"
  value       = azurerm_virtual_network.this.id
}

output "vnet_name" {
  description = "The name of the virtual network"
  value       = azurerm_virtual_network.this.name
}

output "public_subnet_ids" {
  description = "The IDs of the public subnets"
  value       = azurerm_subnet.public[*].id
}

output "k8s_worker_subnet_ids" {
  description = "The IDs of the k8s worker subnets"
  value       = azurerm_subnet.private[*].id
}

output "app_gateway_subnet_id" {
  description = "The IDs of the app gateway subnet"
  value       = azurerm_subnet.app_gateway_subnet.id
}

output "k8s_master_nic_ids" {
  description = "The IDs of the private network interfaces."
  value       = azurerm_network_interface.master_nic[*].id
}

output "k8s_master_private_nic_association_ids" {
  description = "The association IDs of the private network interfaces with asg."
  value       = azurerm_network_interface_application_security_group_association.k8s_master_private_nic_asg[*].id
}