  description = "The ID of the AI Foundry hub"
  value       = azurerm_ai_foundry.ai_foundry_hub.id
 }}

output "ai_foundry_hub_name" {
  description = "The name of the AI Foundry hub"
  value       = azurerm_ai_foundry.ai_foundry_hub.name
 }}

