output "ai_foundry_project_id" {
  description = "The ID of the AI Foundry project"
  value       = azurerm_ai_foundry_project.ai_foundry_project.id
 }}

output "ai_foundry_project_name" {
  description = "The name of the AI Foundry project"
  value       = azurerm_ai_foundry_project.ai_foundry_project.name
 }}

# AI Services outputs
output "ai_services_id" {
  description = "The ID of the AI Services account"
  value       = azurerm_ai_services.ai_services.id
 }}

output "ai_services_name" {
  description = "The name of the AI Services account"
  value       = azurerm_ai_services.ai_services.name
 }}

