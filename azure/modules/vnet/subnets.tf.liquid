resource "azurerm_subnet" "public" {
  count               = {{ public_subnet_count }}
  name                = "${{{ project_name }}}-${{{ environment }}}-public-${count.index + 1}"
  resource_group_name = {{ resource_group_name }}
  virtual_network_name = azurerm_virtual_network.this.name
  address_prefixes    = [cidrsubnet(element({{ vnet_address_space }}, 0), {{ subnet_prefix_length }}, count.index + {{ public_subnet_offset }})]
}

resource "azurerm_subnet" "private" {
  count               = {{ k8s_worker_subnet_count }}
  name                = "${{{ project_name }}}-${{{ environment }}}-k8s-worker-${count.index + 1}"
  resource_group_name = {{ resource_group_name }}
  virtual_network_name = azurerm_virtual_network.this.name
  address_prefixes    = [cidrsubnet(element({{ vnet_address_space }}, 0), {{ subnet_prefix_length }}, count.index + {{ private_subnet_offset }})]
}

# Kubernetes master subnet (new subnet for master nodes)
resource "azurerm_subnet" "k8s_master_subnet" {
  count               = {{ k8s_master_subnet_count }}
  name                = "${{{ project_name }}}-${{{ environment }}}-k8s-master-${count.index + 1}"
  resource_group_name = {{ resource_group_name }}
  virtual_network_name = azurerm_virtual_network.this.name
  address_prefixes    = [cidrsubnet(element({{ vnet_address_space }}, 0), {{ subnet_prefix_length }}, count.index + {{ k8s_master_subnet_offset }})]
}

resource "azurerm_subnet" "app_gateway_subnet" {
  name                = "${{{ project_name }}}-${{{ environment }}}-app-gateway-subnet"
  resource_group_name = {{ resource_group_name }}
  virtual_network_name = azurerm_virtual_network.this.name

  # Use an unused subnet index for the app gateway subnet.
  address_prefixes    = [cidrsubnet(
    element({{ vnet_address_space }}, 0),
    {{ subnet_prefix_length }},
    {{ app_gateway_subnet_offset }}
  )]
}