  address_prefixes     = [cidrsubnet(element(var.vnet_address_space, 0), var.subnet_prefix_length, var.k8s_private_subnet_offset)]

  # Add service endpoints for SQL access
  service_endpoints = ["Microsoft.Sql"]
}

