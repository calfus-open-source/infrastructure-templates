variable "project_name" {
  description = "Name of the project"
  type        = string
 }}

variable "environment" {
  description = "Environment name (e.g., dev, prod)"
  type        = string
 }}

variable "location" {
  description = "Azure region where the NSGs will be created"
  type        = string
 }}

variable "tags" {
  description = "Tags to apply to all resources"
  type        = map(string)
 }}

variable "resource_group_name" {
  description = "Name of the resource group where the NSGs will be created"
  type        = string
 }}

variable "source_bastion_ip" {
  type = list(string)
 }}

variable "vnet_address_space" {
  description = "The address space for the VNet"
  type        = list(string)
 }}

variable "subnet_prefix_length" {
  description = "The prefix length for subnets"
  type        = number
 }}

variable "app_gateway_subnet_offset" {
  description = "Offset for the Application Gateway subnet"
  type        = number
 }}

variable "k8s_private_subnet_offset" {
  description = "Offset for the Kubernetes private subnet"
  type        = number
 }}

variable "frontend_subnet_offset" {
  description = "Offset for the frontend subnet"
  type        = number
 }}

variable "vpn_client_address_space" {
  description = "The address space for VPN clients"
  type        = list(string)
 }}