output "vnet_id" {
  description = "The ID of the virtual network."
  value       = module.vnet.vnet_id
 }

output "vnet_name" {
  description = "The name of the virtual network."
  value       = module.vnet.vnet_name
 }

output "application_gateway_private_ip" {
  description = "The private IP address of the Application Gateway (accessible only via VPN)"
  value       = module.agw.application_gateway_private_ip
 }

output "application_gateway_public_ip" {
  description = "The public IP address of the Application Gateway (blocked by NSG - not accessible from internet)"
  value       = module.agw.application_gateway_public_ip
 }

