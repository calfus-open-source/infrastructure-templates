terraform {
    required_version = "{{ terraform_version }}"
    required_providers {
        {% if cloud_provider == 'aws' %}
        aws = {
            source = "hashicorp/aws"
            version = "5.58.0"
        }
        helm = {
            source  = "hashicorp/helm"
            version = "2.17.0"
        }
        {% endif %}

        {% if source_code_repository == 'github' %}
        github = {
            source = "integrations/github"
            version = "{{ github_provider_version }}"
        }
        {% endif %}
    }
}