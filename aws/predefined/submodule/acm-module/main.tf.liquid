
provider "aws" {
    region     = "{{ aws_region}}"
}

terraform {
    backend "s3" {
    }
}

data "aws_route53_zone" "route53_zone" {
  name = var.domain_name
}
module "acm" {
    source = "../../../modules/acm"
    name = "${ var.project_name }"
    environment = "${ var.environment }"
    domain_name = var.domain_name
    route53_zoneid = data.aws_route53_zone.route53_zone.zone_id
}