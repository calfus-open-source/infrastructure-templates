provider "aws" {
    region     = "ap-south-1"
}

terraform {
    backend "s3" {
    }
}

module "vpc" {
  
  for_each   = toset(var.moduleNames) # Creates one module instance per moduleName
  source      = "./modules/vpc"
  name        = "${var.project_name}-${var.environment}-${each.value}-vpc"
  environment = var.environment
  cidr       = var.cidr

}
